<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:text="Hasil Permainan"
        android:textColor="#000"
        tools:ignore="MissingConstraints">
    </TextView>

    <TextView
        android:id="@+id/text_result_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_marginStart="80dp"
        android:text="Anda Menang"
        tools:ignore="MissingConstraints">
    </TextView>

    <Button
        android:id="@+id/button_play_again"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Main Lagi"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:background="#49F704"
        android:layout_gravity="center">

    </Button>

    <Button
        android:id="@+id/button_back_menu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Kembali ke menu"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:background="#FB7F32"
        android:layout_marginBottom="45dp"
        android:layout_gravity="center">

    </Button>


</LinearLayout>