<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Next"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:background="#ddeaf6"
    android:id="@+id/container">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PILIH LAWANMU"
            android:textSize="20sp"
            android:textColor="#000"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="490dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

        </TextView>

        <ImageButton
            android:id="@+id/button_menu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu1"
            android:background="#ddeaf6"
            app:layout_constraintStart_toEndOf="@+id/text1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/text1"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toBottomOf="@+id/text1"
            app:layout_constraintStart_toStartOf="@+id/text1"
            android:layout_marginBottom="400dp"
            tools:ignore="MissingConstraints">

        </ImageButton>

        <TextView
            android:id="@+id/text_pemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/button_menu1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/button_menu1"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_marginBottom="380dp"
            android:text="Bebas"
            app:layout_constraintTop_toBottomOf="@+id/button_menu1"
            app:layout_constraintStart_toStartOf="@+id/button_menu1">

        </TextView>

        <ImageButton
            android:id="@+id/button_menu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu2"
            android:background="#ddeaf6"
            app:layout_constraintStart_toEndOf="@+id/text_pemain"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/text_pemain"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toBottomOf="@+id/text_pemain"
            app:layout_constraintStart_toStartOf="@+id/text_pemain"
            android:layout_marginBottom="150dp"
            tools:ignore="MissingConstraints">

        </ImageButton>

        <TextView
            android:id="@+id/text_cpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/button_menu2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/button_menu2"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_marginBottom="130dp"
            android:text="Bebas"
            app:layout_constraintTop_toBottomOf="@+id/button_menu2"
            app:layout_constraintStart_toStartOf="@+id/button_menu2">
        </TextView>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/my_coordinatorLay"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_constraintStart_toEndOf="@+id/text_cpu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_cpu"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@+id/text_cpu"
        app:layout_constraintStart_toStartOf="@+id/text_cpu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/snackbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>