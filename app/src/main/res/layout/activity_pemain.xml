<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#ddeaf6"
    android:orientation="vertical"
    tools:context=".PemainActivity">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ddeaf6"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_batal_fix"
        android:layout_gravity="right"
        tools:ignore="RtlHardcoded">

    </ImageButton>

    <ImageView
        android:contentDescription="image my"
        android:id="@+id/img_view_one"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_one" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="100dp"
            android:layout_weight="1"
            android:text="@string/pemain_1"
            android:background="#ddeaf6"
            android:textColor="#2196F3"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_judul_comp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_weight="0.5"
            android:text="Pemain 2"
            android:textColor="#2196F3"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="900dp"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/but_batu"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:background="#ddeaf6"
                android:src="@drawable/ic_batu_but" />

            <ImageButton
                android:id="@+id/but_kertas"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="#ddeaf6"
                android:layout_marginStart="12dp"
                android:layout_marginTop="24dp"
                android:padding="0dp"
                android:src="@drawable/ic_kertas_but" />

            <ImageButton
                android:id="@+id/but_gunting"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:padding="0dp"
                android:background="#ddeaf6"
                android:src="@drawable/ic_gunting_but" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="900dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/text_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:background="#ddeaf6"
                android:gravity="center_horizontal"
                android:src="@drawable/img_versus"
                android:textColor="#F30909"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="900dp"
            android:layout_marginStart="300dp"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/but_batu_com"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:background="#ddeaf6"
                android:padding="0dp"
                android:src="@drawable/ic_batu_but" />

            <ImageButton
                android:id="@+id/but_kertas_com"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="24dp"
                android:background="#ddeaf6"
                android:src="@drawable/ic_kertas_but" />

            <ImageButton
                android:id="@+id/but_gunting_com"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="24dp"
                android:background="#ddeaf6"
                android:src="@drawable/ic_gunting_but" />

        </LinearLayout>
    </RelativeLayout>



        <ImageButton
            android:id="@+id/but_reset"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:background="#ddeaf6"
            android:src="@drawable/ic_batu_fix" />

</LinearLayout>