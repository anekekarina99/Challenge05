<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LpTwoFrag">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ddeaf6">

        <ImageView
            android:id="@+id/ic_lg_two"
            android:src="@drawable/ic_lg_tw"
            android:layout_width="300dp"
            android:layout_marginBottom="5dp"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.279"
            tools:ignore="MissingConstraints">

        </ImageView>

        <ImageButton
            android:src="@drawable/button2"
            app:layout_constraintStart_toEndOf="@id/ic_lg_two"
            android:id="@+id/button_img_two"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#ddeaf6"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toBottomOf="@+id/ic_lg_two"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

        </ImageButton>
        <ImageButton
            android:src="@drawable/next"
            app:layout_constraintStart_toEndOf="@id/button_img_two"
            android:id="@+id/button_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#ddeaf6"
            app:layout_constraintTop_toBottomOf="@+id/button_img_two"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="290dp"
            android:layout_marginBottom="90dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
        </ImageButton>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>